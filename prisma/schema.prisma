// File: prisma/schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trade {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  symbol    String
  amount    Float
  price     Float
  type      String
  createdAt DateTime @default(now())
}

