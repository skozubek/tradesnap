// prisma/schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trade {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  symbol      String
  type        String    // "BUY" or "SELL"
  price       Float
  amount      Float
  stopLoss    Float?
  takeProfit  Float?
  status      String    // "OPEN" or "CLOSED"
  notes       String?
  strategyName String?  // Changed from 'strategy' to 'strategyName' to be more explicit
  timeframe   String?   // Made optional
  pnl         Float?
  exitPrice   Float?
  exitDate    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}